{
  "extends": "@salesforce/dev-config/tsconfig-strict-esm",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "declaration": false,
    "baseUrl": ".",
    "downlevelIteration": true,
    "paths": {
      "@salesforce/kit": [
        "node_modules/@salesforce/kit"
      ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ]
}